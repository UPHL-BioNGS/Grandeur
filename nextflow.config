manifest {
  name                            = 'Grandeur'
  author                          = 'Erin Young'
  homePage                        = 'https://github.com/UPHL-BioNGS/Grandeur'
  mainScript                      = 'grandeur.nf'
  version                         = '3.3.20230815'
  defaultBranch                   = 'main'
  description                     = 'Grandeur is short-read de novo assembly pipeline with serotyping.'
}

//########## Setting Profiles ##########

profiles {
  docker {
    docker.enabled                = true
    docker.runOptions             = "-u \$(id -u):\$(id -g)"
    }
  singularity {
    singularity.enabled           = true
    singularity.autoMounts        = true
    }
  msa {
    params.msa                    = true
    }
  just_msa {
    params.msa                    = true
    params.extras                 = false
    }
  test0 {
    params.sra_accessions         = ["SRR11725329", "SRR13643280", "SRR14436834", "SRR14634837", "SRR7738178", "SRR7889058"]  
    }
  test1 {
    params.sra_accessions         = ["SRR11725329", "SRR13643280", "SRR14436834", "SRR14634837", "SRR7738178", "SRR7889058"]
    params.current_datasets       = false
    params.mash_db                = false
    }
  test2 {
    params.sra_accessions         = ["SRR22314961", "SRR22314960", "SRR22314959", "SRR22314958" ]
    params.msa                    = true
    }
  test3 {
    params.sra_accessions         = ["SRR22314961", "SRR22314960", "SRR22314959", "SRR22314958" ]
    params.msa                    = true
    params.extras                 = false
    }
  test4 {
    params.sra_accessions         = ["SRR22314961", "SRR22314960", "SRR22314959", "SRR22314958" ]
    params.msa                    = true
    params.current_datasets       = false
    params.mash_db                = false
    }
  test5 {
    params.sra_accessions         = ["SRR22314961", "SRR22314960", "SRR22314959", "SRR22314958" ]
    params.msa                    = true
    params.fastani_include        = false
    }
  uphl {
    includeConfig './configs/UPHL.config'
    }
}

params.maxcpus                    = 12
params.medcpus                    = 4

process {
  withLabel: maxcpus {
    cpus = params.maxcpus
  }
  withLabel: medcpus {
    cpus = params.medcpus
  }
}
